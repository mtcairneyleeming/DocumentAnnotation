@page
@using DocumentAnnotation.Models
@using DocumentAnnotation.Pages.Documents
@model global::DocumentAnnotation.Pages.Documents.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["PageTitle"] = "Edit";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DocumentAnnotation.DocumentAnnotationId"/>
            <div class="form-group">
                <label asp-for="DocumentAnnotation.Name" class="control-label"></label>
                <input asp-for="DocumentAnnotation.Name" class="form-control"/>
                <span asp-validation-for="DocumentAnnotation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}