@model Documents.IndexModel


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocumentAnnotation[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentAnnotation[0].Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentAnnotation[0].User)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.DocumentAnnotation)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>

            <td>
                <a asp-page="/Annotate/View" asp-route-docAnnId="@item.DocumentAnnotationId"><strong>View</strong></a> |
                <a asp-page="/Annotate/Edit" asp-route-docAnnId="@item.DocumentAnnotationId"><strong>Annotate</strong></a> |
                <a asp-page="./Edit" asp-route-id="@item.DocumentAnnotationId">Edit details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DocumentAnnotationId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>